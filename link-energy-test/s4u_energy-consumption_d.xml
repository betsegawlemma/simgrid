<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4">
  <!-- The master process (with some arguments) -->
  <process host="Host0" function="sender">
     <argument value="10Mbps"/>   <!-- Comm size of tasks -->
  </process>
  <!-- The worker process (with no argument) -->
  <process host="Host2" function="receiver" on_failure="RESTART">
  </process>
</platform>
