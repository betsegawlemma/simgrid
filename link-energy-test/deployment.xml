<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid.dtd">
<platform version="3">
  <!-- The master process (with some arguments) -->
  <process host="Host0" function="master">
     <argument value="2"/>       <!-- Number of tasks -->
     <argument value="0"/>  <!-- Computation size of tasks -->
     <argument value="0"/>   <!-- Communication size of tasks -->
  </process>
  <!-- The worker process (with no argument) -->
  <process host="Host2" function="worker" on_failure="RESTART"/>
</platform>
