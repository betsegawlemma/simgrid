function list_files($dir){
        $hidden = ".";
        if (is_dir($dir)) {
                if ($dh = opendir($dir)) {
                        echo "<ul>\n";
                        while (($file = readdir($dh)) !== false) {
                                if (is_dir($file) && preg_match("/^[0-9]/", $file)){
                                        echo "<li><a href=\"" . $dir . "/" . $file . "/doc/\"> Simgrid version " . $file . "</a></li>";
                                }				
                        }
                        closedir($dh);
                        echo "</ul>";
                }
        }
        else {
                echo "No version now.\n";
        }
}

