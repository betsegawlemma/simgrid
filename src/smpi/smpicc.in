#! /bin/sh

CC=@CMAKE_C_COMPILER@

INCLUDEARGS="@includeflag@"
CMAKE_LINKARGS="-L@libdir@"

@SMPITOOLS_SH@

list_set CFLAGS
list_set LINKARGS
if [ "@WIN32@" != "1" ]; then
    list_add CFLAGS "-Dmain=smpi_simulated_main_"
    list_add LINKARGS "-lsimgrid"
else
    list_add CFLAGS "-include" "@includedir@/smpi/smpi_main.h"
    list_add LINKARGS "@libdir@\libsimgrid.dll"
fi

list_set CMDLINE
while [ $# -gt 0 ]; do
    ARG="$1"
    shift
    case "${ARG}" in
        -c)
            CMAKE_LINKARGS=""
            LINKARGS=""
            list_add CMDLINE "-c"
            ;;
        *.c)
            SRCFILE="$(readlink -f ${ARG} 2>/dev/null)"
            if [ -z "$SRCFILE" ] ; then
                SRCFILE="$ARG"
            fi
            list_add CMDLINE "${SRCFILE}"
            ;;
        *)
            list_add CMDLINE "${ARG}"
      ;;
  esac
done

list_set CMDLINE "${CFLAGS}" "${CMDLINE}" ${INCLUDEARGS} ${CMAKE_LINKARGS} "${LINKARGS}"
eval $(list_get CMDLINE)

"${CC}" "$@"
