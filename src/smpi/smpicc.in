#! /bin/bash

CC=@CMAKE_C_COMPILER@
CFLAGS="-O2 -Dmain=smpi_simulated_main"

INCLUDEARGS="-I@includedir@ -I@includedir@/smpi"
CMAKE_LINKARGS="-L@CMAKE_LINKARGS@"
LINKARGS="-lsimgrid -lsmpi -lm"

CMDLINE=""
while [ -n "$1" ]; do
  ARG="$1"
  shift
  case "${ARG}" in
   -c)
      LINKARGS=""
      CMDLINE="${CMDLINE} -c "
      ;;
   *.c)
      SRCFILE="$(readlink -f ${ARG} 2>/dev/null)"
      if [ -z $SRCFILE ] ; then
         SRCFILE="$ARG"
      fi
      CMDLINE="${CMDLINE} ${SRCFILE} "
      ;;
   *)
      CMDLINE="${CMDLINE} ${ARG} "
      ;;
  esac
done

CMDLINE="${CC} ${CFLAGS} ${CMDLINE} ${INCLUDEARGS} ${CMAKE_LINKARGS} ${LINKARGS}"

#echo "${CMDLINE}"
${CMDLINE}
